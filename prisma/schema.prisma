// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

model Notification {
  id          String    @id
  recipientId String    @map("recipient_id")
  content     String
  category    String
  readAt      DateTime? @map("read_at")
  createdAt   DateTime  @map("created_at")

  @@index([recipientId])
  @@map("notifications")
}
