{
  "name": "nest-ignite-lab",
  "main": "src/main/server.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/main",
    "dev": "nest start --watch",
    "build": "rimraf dist && nest build",
    "deploy": "run-s prisma:dev build start",
    "lint": "run-s lint:tsc lint:prettier lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --write .",
    "lint:eslint": "npx eslint --fix src/**/*.ts __tests__/**/*.ts",
    "test": "jest --no-cache",
    "test:ci": "npm test -- --silent --coverage --bail=false",
    "test:producer": "ts-node __tests__/mock-producer.ts",
    "prisma": "prisma generate",
    "prisma:dev": "npm run prisma && prisma migrate dev",
    "prisma:prod": "npm run prisma && prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "docker": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/microservices": "^10.3.1",
    "@nestjs/platform-express": "^10.3.1",
    "@prisma/client": "^5.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "29.2.4",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-mist3rbru": "^0.2.0",
    "jest": "29.3.1",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0"
  }
}