{
  "name": "nest-ignite-lab",
  "main": "src/main/server.ts",
  "scripts": {
    "start": "nest start",
    "start:prod": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "dev": "nest start --watch",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "deploy": "npm run prisma:dev && npm run build && npm run start:prod",
    "format": "prettier --write . && eslint --fix .",
    "test": "jest --runInBand --no-cache",
    "test:w": "npm test -- --watch",
    "test:ci": "npm test -- --silent --coverage --bail=false",
    "prisma": "prisma generate",
    "prisma:dev": "npm run prisma && prisma migrate dev",
    "prisma:prod": "npm run prisma && prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "docker": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@prisma/client": "^4.7.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "kafkajs": "^2.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.6.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.15",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.4.0",
    "jest": "29.3.1",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "prisma": "^4.7.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.4",
    "webpack": "^5.0.0"
  }
}
